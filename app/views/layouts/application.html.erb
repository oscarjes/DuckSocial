<!DOCTYPE html>
<html>
  <head>
    <title>Minimalnet</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar ">
      <div class="navbar-brand">
        <%= link_to icon("home", "Home"), root_path, class: "navbar-item" %>
      </div>
      <% if current_user %>
      <div class="navbar-brand">
        <%= link_to icon("search", "Find Friends"), users_path, class: "navbar-item"  %>
      </div>
      <div class="navbar-end">
        <%= link_to icon("cog", "Edit Profile"), profile_path, class: "navbar-item"  %>
        <%= link_to icon("sign-out", "Sign Out"), logout_path, class: "navbar-item", method: :post  %>
      </div>
      <% else %>
      <div class="navbar-brand">
        <%= link_to icon("user-plus", "Sign Up"), new_user_path, class: "navbar-item"  %>
      </div>
      <div class="navbar-brand">
        <%= link_to icon("sign-in", "Sign In"), new_session_path, class: "navbar-item"  %>
      </div>
      <% end %>
    </nav>
    <%= flash_messages %>
    <div class="container is-fluid">
      <%= content_for?(:content) ? yield(:content) : yield %>
    </div>
  </body>
</html>
