<div class="columns">
  <div class="column is-one-third">
    <div class="card" style="margin-top: 25px;">
      <header class="card-header">
        <p class="card-header-title">
          Change your Profile Picture
        </p>
      </header>
      <div class="card-content">
      <%= form_for @user do |f| %>
        <div class="content">
          <div class="media-content">
            <figure class="image is-96x96">
              <img src="<%= @user.avatar %>" alt="Image" style="border-radius: 50%;">
            </figure>
          </div>
          <div class="field">
              <div class="control">
              <%= f.file_field :avatar, class: "input"%>
              </div>
          </div>
            <div class="field">
              <div class="control">
                <%= f.submit "Change picture", class: "button is-info"%>
              </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="column is-one-third">
    <div class="card" style="margin-top: 25px;">
      <header class="card-header">
        <p class="card-header-title">
          Edit Your Personal Information
        </p>
      </header>
      <div class="card-content">
      <%= form_for @user do |f| %>
        <div class="content">
          <div class="field">
            <div class="control">
              <%= f.text_field :firstname, placeholder: "First Name", class: "input"%>
            </div>
          </div>
          <div class="field">
              <div class="control">
              <%= f.text_field :lastname, placeholder: "Last Name", class: "input"%>
              </div>
          </div>
          <div class="field">
              <div class="control">
              <%= f.text_field :email, placeholder: "Email Address", class: "input"%>
              </div>
          </div>
            <div class="field">
              <div class="control">
                <%= f.submit "Update Info", class: "button is-info"%>
              </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="column is-one-third">
    <div class="card" style="margin-top: 25px;">
      <header class="card-header">
        <p class="card-header-title">
          Change Your Password
        </p>
        <a class="card-header-icon" id="password-toggle-icon">
          <span class="icon">
            <i class="fa fa-angle-down"></i>
          </span>
        </a>
      </header>
      <div class="card-content hidden" id="password-change">
      <%= form_for @user do |f| %>
        <div class="content">
          <div class="field">
              <div class="control">
              <%= f.password_field :old_password, placeholder: "Old Password", class: "input"%>
              </div>
          </div>
          <div class="field">
              <div class="control">
              <%= f.password_field :password, placeholder: "New Password", class: "input"%>
              </div>
          </div>
          <div class="field">
              <div class="control">
              <%= f.password_field :password_confirmation, placeholder: "Confirm New Password", class: "input"%>
              </div>
          </div>
            <div class="field">
              <div class="control">
                <%= f.submit "Change Password", class: "button is-info"%>
              </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>