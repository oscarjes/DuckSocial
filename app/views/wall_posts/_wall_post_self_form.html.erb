<div class="card" style="margin-top: 25px;">
  <div class="card-content" id="wallpost"> 
    <div class="media">
      <div class="media-left">
        <figure class="image is-48x48">
          <img src="<%= current_user.avatar %>" alt="Image" style="border-radius: 50%;">
        </figure>
      </div>
      <div class="media-content">
        <%= form_for wallpost do |f| %>
          <div class="field">
            <div class="control">
              <%= f.text_area :body, class: "textarea "%>
            </div>
          </div>

            <div class="field">
              <%= f.label :mentions, "Find users to mention:", class: "label" %>
                <div class="control">
                  <%= text_field_tag :q, params[:q], class: "input", placeholder: "Find users...", id: "provider-remote" %>
                  <%= hidden_field_tag "mentions", "", id: "data-holder" %>
                </div>
            </div>

          <div class="field">
          <%= f.label :image, "Upload an image", class: "label" %>
            <div class="control">
              <%= f.file_field :image, class: "file" %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <button class="button is-primary">Post
              </button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>  
</div>