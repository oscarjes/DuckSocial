<!DOCTYPE html>
<html>
  <head>
    <title>DuckSocial</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

    <nav class="navbar ">
      <div class="navbar-brand">
        <a href="<%= root_path %>" class="navbar-item">
          <%= image_tag "duck_min.png" %>
          <strong style="margin-left: 5px;">DuckSocial</strong>
          </a>
      </div>
      <% if current_user %>
        <div class="navbar-item">
          <%= form_tag friends_new_path, method: "get" do %>
            <div class="field has-addons">
              <div class="control">
                <%= text_field_tag :q, params[:q], class: "input", placeholder: "Find users...", id: "provider-remote" %>
              </div>
              <div class="control">
                <%= button_tag "Search", class: "button is-primary"%>
              </div>
            </div>
          <% end %>
        </div>

      <div class="navbar-end">
        <%= link_to icon("sign-out", "Sign Out"), logout_path, class: "navbar-item", method: :post  %>
      </div>
      <% else %>
      <div class="navbar-brand">
        <%= link_to icon("user-plus", "Sign Up"), new_user_path, class: "navbar-item"  %>
      </div>
      <div class="navbar-brand">
        <%= link_to icon("sign-in", "Sign In"), new_session_path, class: "navbar-item"  %>
      </div>
      <% end %>
    </nav>
    <%= flash_messages %>
    <div class="container is-fluid">
      <%= content_for?(:content) ? yield(:content) : yield %>
    </div>
  </body>
</html>
